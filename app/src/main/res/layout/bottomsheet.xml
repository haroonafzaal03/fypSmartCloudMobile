<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottomsheet"
    android:background="@color/colorPrimary"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="?android:attr/actionBarSize"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textColor="@android:color/white"
        android:text="Open In"
        android:gravity="center_vertical"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/keeplayout"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"



        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/keep"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keep"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="Keep"
            android:layout_marginLeft="32dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/emaillayout"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"



        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/email"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="Email"
            android:layout_marginLeft="32dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/hangoutlayout"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"



        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/apollo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hangout"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="Hangout "
            android:layout_marginLeft="32dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/googlelayout"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"



        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/google"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/google"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="Google"
            android:layout_marginLeft="32dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/massengerlayout"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"



        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/messenger"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messanger"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="Messanger"
            android:layout_marginLeft="32dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/slideslayout"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"



        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/slides"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slides"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="Slides"
            android:layout_marginLeft="32dp"
            />
    </LinearLayout>
</LinearLayout>